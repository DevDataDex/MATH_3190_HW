team_filter <- function(data, team) {
data %>%
filter(home == team | vis == team) %>%
rename(date = Date, home = Home, score1 = Score,
vis = Visitor, score2 = Score, location = Location,
score_diff = Difference)
}
head(team_filter(data, "Southern Utah"))
